<script>
const confetti = document.getElementById('confetti');
confetti.width = window.innerWidth * 0.8;
confetti.height = 160;
const ctx = confetti.getContext('2d');

// Draw simple confetti
for (let i = 0; i < 150; i++) {
  ctx.fillStyle = ['#FF5A5F','#7BDCB5','#00A699','#FCB0B3','#FFD166'][i % 5];
  ctx.fillRect(Math.random() * confetti.width, Math.random() * confetti.height, 6, 10);
}
</script>
